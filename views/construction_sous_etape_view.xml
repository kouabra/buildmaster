<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_sous_etape_tree" model="ir.ui.view">
        <field name="name">construction.sous.etape.tree</field>
        <field name="model">construction.sous.etape</field>
        <field name="arch" type="xml">
            <tree string="Sous-Étapes">
                <field name="sequence" widget='handle'/>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="view_sous_etape_form" model="ir.ui.view">
        <field name="name">construction.sous.etape.form</field>
        <field name="model">construction.sous.etape</field>
        <field name="arch" type="xml">
            <form string="Sous-Étape">
                <sheet>
                    <group>
                        <field name="sequence"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_sous_etape_form" model="ir.ui.view">
        <field name="name">construction.sous.etape.form</field>
        <field name="model">construction.sous.etape</field>
        <field name="arch" type="xml">
            <form string="Sous-Étape">
                <sheet>
                    <group>
                        <field name="sequence"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sous_etape" model="ir.actions.act_window">
        <field name="name">Sous-Étapes</field>
        <field name="res_model">construction.sous.etape</field>
        <field name="view_mode">tree,form</field>
    </record>







</odoo>